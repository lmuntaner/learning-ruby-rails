<!DOCTYPE html>
<html>
<head>
  <title>Cats99</title>
  <%= csrf_meta_tags %>
</head>
<body>
  
<% if current_user.nil? %>
  <%= link_to "Log In", new_session_url %>
  <%= link_to "Sign Up", new_user_url %>
<% else %>
  <h3><%= link_to current_user.user_name, user_url %></h3>
  <%= button_to "Log Out", session_url, method: :delete %>
<% end %>

<% if flash[:errors] %>
  <p><%= flash[:errors] %></p>
<% end %>

<%= yield %>

</body>
</html>
